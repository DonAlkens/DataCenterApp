@model DataCenter.Models.DepartmentModel

@{
    ViewBag.Title = "Edit";
}

<div class="col-md-12">
    <div class="breadcrumb">
        <h4>Department</h4>
    </div>
</div>

<div class="col-md-12">
    <div class="row">
        <div class="col-md-7">
            <div class="slick-card">

                @if (ViewBag.Department != null)
                {
                    <h3 class="card-title">Edit Department</h3>
                    <div class="divider"></div>
                    if (ViewBag.success != null && ViewBag.success == true)
                    {
                        <div class="form-group">
                            <span class="alert alert-success">@ViewBag.Message</span>
                        </div>
                    }
                    <div class="form-group">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                    <div class="form-box mt-3">
                        <form action="~/Department/Edit?emp=@ViewBag.Department.ID" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input class="form-control" value="@ViewBag.Department.DepartmentName" name="DepartmentName" placeholder="Enter Department name" />
                                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-sm btn-primary">Save Changes</button>
                                <a href="/department/index" class="btn btn-sm btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>

                }
                else
                {
                    <div class="form-group">
                        <p class="alert alert-danger">Department not Found in Database.</p>
                    </div>
                    <div class="form-group text-center">
                        <a href="/department/index" class="btn btn-sm btn-secondary">Back To Department List</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

